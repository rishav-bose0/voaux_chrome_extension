{
  "manifest_version": 3,
  "name": "Voaux Text to Speech",
  "version": "1.0",
  "icons": {
    "16": "img_files/icon.png",
    "48": "img_files/icon.png"
  },
  "permissions": ["scripting", "activeTab", "storage", "offscreen", "identity", "identity.email"],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "main.html"
  }
}
